<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top" android:background="@color/black"/>
    <Button android:id="@+id/nextFrameButton" android:layout_width="300px" android:layout_height="130px" android:layout_gravity="bottom|center_horizontal" android:text="Next"/>
</FrameLayout>